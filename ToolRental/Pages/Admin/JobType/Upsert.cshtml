@page
@model ToolRental.Pages.Admin.JobType.UpsertModel
<form method="post" asp-action="Upsert">
    <div class="container">
        <div class="row px-2 mx-2 border">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @if (Model.JobTypeObj.Id != 0)
            {
                <input type="hidden" asp-for="JobTypeObj" />
            }
            <div class="col-12 px-3" style="border-bottom: 1px solid #325d88">
                <h2 class="text-primary">@(Model.JobTypeObj.Id != 0 ? "Update" : "Create") Job Type</h2>
            </div>
            <div class="col-8 pt-3">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="JobTypeObj.Name"></label>
                    </div>
                    <div class="col-9">
                        <input class="form-control" asp-for="JobTypeObj.Name" />
                        <span class="text-danger" asp-validation-for="JobTypeObj.Name"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-9 offset-3">
                        <div class="row">
                            <div class="col-6">
                                <button type="submit" class="btn btn-primary form-control">@(Model.JobTypeObj.Id != 0 ? "Update" : "Create")</button>
                            </div>
                            <div class="col-6">
                                <a asp-page="./Index" class="btn btn-success form-control">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
