@page
@using ToolRental.Utility
@if (User.IsInRole(SD.ManagerRole))
{
    <div class="border backgroundWhite container">
        <div class="row">
            <div class="col-6">
                <h2 class="text-primary">Rental Item List</h2>
            </div>
            <div class="col-6 text-right">
                <a asp-page="Upsert" class="btn btn-primary"><i class="fa fa-plus"></i>&nbsp;Create New</a>

            </div>
        </div>
        <br /><br />
        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Tool Category</th>
                    <th>Job Type</th>
                    <th></th>
                </tr>
            </thead>
        </table>

    </div>
    @section Scripts{
        <script src="~/js/rentalitem.js"></script>
    }
}
else
{
    <div>
        <h1 class="text-danger">Access Denied!</h1>
    </div>
}

