@page
@model ToolRental.Pages.Customer.Home.IndexModel
@foreach(var category in Model.CategoryList)
{
    <div class="container row pb-3">
        <div class="row">
            <h2 class="text-primary pl-1"> <b>@category.Name</b></h2>
            <div class="col-12">
                <div class="row my-3">
                    @foreach (var rental in Model.RentalItemList.Where(c => c.ToolCategoryId == category.Id))
                    {
                        <div class="col-lg-3 col-xl-3 col-md-6 pb-4">
                            <div class="card" style="border: 2px solid #008dba; border-radius: 5px;">
                                <div class="pl-3 pt-1 text-center">
                                    <h3 class="card-title text-primary"><b>@rental.Name</b></h3>
                                </div>
                                <div class="d-flex justify-content-between form-control" style="border: 0px;">
                                    <div class="col-6 badge badge-warning text-center" style="font-size: 14px;">@rental.Category.Name</div>
                                    <div class="col-6 text-right h4" style="color:maroon; "><b>$@rental.Price.ToString("0.00")</b></div>
                                </div>
                                <img src="@rental.Image" class="card-img-top p-2 rounded" />
                                <a asp-page="Details" class="btn btn-primary" style="border-radius:2px;" asp-route-id="@rental.Id">Details</a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
}

